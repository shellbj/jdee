# Cleanup
clean: $(SUBDIRS_CLEAN)
	$(RM) $(CLASSDIR)/jde/debugger/*.class
	@echo "Cleanup done."

# Rebuild
build: clean all
	@echo "Rebuild done."

#### Aux targets


# Sub-directories compilation
%.make:
	$(MAKE) -k -C $(subst .make,,$@)

# Sub-directories cleanup
%.clean:
	$(MAKE) -k -C $(subst .clean,,$@) clean

# Phony Targets
.PHONY: clean build help

