SUBDIRS_CLEAN = $(patsubst %,%.clean,$(SUBDIRS))
SUBDIRS_MAKE  = $(patsubst %,%.make,$(SUBDIRS))
CLASSDIR = $(DEVDIR)/jde/java/classes

#### Main targets

# Default
all: $(SUBDIRS_MAKE)
