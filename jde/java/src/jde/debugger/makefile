RM = rm -f


#### Java compiler settings
DEVDIR = $(JDEDEV)
DEVDIRDOS = $(subst \,/,$(shell cygpath -w $(DEVDIR)))
JAVA_HOME = c:/java/jdk1.3.1
JAVAC       = $(JAVA_HOME)/bin/javac
CLASSPATH = -classpath "$(DEVDIRDOS)/jde/java/classes;$(DEVDIRDOS)/jde/java/src;$(JAVA_HOME)/lib/tools.jar"
SOURCEPATH = -sourcepath "$(DEVDIRDOS)/jde/java/src"

JAVAC_FLAGS = $(CLASSPATH) -g -d $(DEVDIRDOS)/jde/java/classes

JAVADOC = $(JAVA_HOME)/bin/javadoc
JAVADOC_FLAGS = $(CLASSPATH) \
		$(SOURCEPATH) \
		-author \
		-version \
		-d "$(DEVDIRDOS)/jde/java/doc/JDEbug/api"

